@using Warehouse.Admin.Frontend.Models
@model ArticlesList

@{
    ViewBag.Title = "Articles list";
}

<div class="page-header">
    <h1>Articles list <small>Subtext for header</small></h1>
</div>

<form class="form-inline" role="form">
    <div class="form-group">
        @Html.LabelFor(m => m.Filter.Name, new { @class = "sr-only" })
        @Html.TextBoxFor(m => m.Filter.Name, new { @class = "form-control", placeholder = "Enter name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Filter.Code, new { @class = "sr-only" })
        @Html.TextBoxFor(m => m.Filter.Code, new { @class = "form-control", placeholder = "Enter code" })
    </div>
    <button type="submit" class="btn btn-default">Search</button>
</form>

@*<div class="bs-docs-grid">
    <div class="row show-grid">*@
@Html.ActionLink("Add", "AddArticle")

<div class="row">
    <div class="col-md-3">Name</div>
    <div class="col-md-3">Code</div>
    <div class="col-md-3">Price</div>
    <div class="col-md-1">Expiry days</div>
    <div class="col-md-2">Action</div>
</div>

@for (int i = 0; i < Model.Items.Count; i++)
{
    var item = Model.Items[i];
    <div class="row" item-id="@item.Id">
        <div class="col-md-3">@item.Name</div>
        <div class="col-md-3">@item.Code</div>
        <div class="col-md-3">@item.Price</div>
        <div class="col-md-1">@item.ExpiryDays</div>
        <div class="col-md-2">@Html.ActionLink("Edit", "EditArticle", "Home", new { id=item.Id }, new { @class="btn" })
            @Html.ActionLink("Delete", "DeleteArticle", "Home", new { id = item.Id, filter = Model.Filter }, new { @class = "btn" })
        </div>
    </div>
}

